@page "/"


<PageTitle>Home</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.

<UserComponent @bind-User="@_user" State="ComponentState.Read" />

@code {
    [Inject]
    public ICrudable Context { get; set; }
    [Inject]
    public SynchronisationManager SynchronisationManager { get; set; }
    private User? _user;
    private Recipe? _recipe;

    protected override async Task OnInitializedAsync()
    {
        _user = await Context.Get<User>(1);
        if (_user is null)
        {
            Debug.WriteLine(":(");
        }
        _recipe = await Context.Get<Recipe>(1);

        if (_recipe is null)
        {
            Debug.WriteLine(":(");
        }
    }
}